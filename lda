private void uploadParquetToS3(String bucketName, String key, File parquetFile) throws S3Exception {
    try {
        s3Client.putObject(PutObjectRequest.builder()
                .bucket(bucketName)
                .key(key)
                .build(),
                RequestBody.fromFile(parquetFile));
    } catch (SdkClientException e) {
        throw new S3Exception("Error uploading Parquet file to S3: " + e.getMessage(), e);
    }
}
